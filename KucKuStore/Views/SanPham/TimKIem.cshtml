@using KucKuStore.Models.Entities;
@{
    ViewBag.Title = "TimKIem";
    Layout = "~/Views/Shared/LayoutIndex.cshtml";
}

<!-- ##### Breadcumb Area Start ##### -->
<div class="breadcumb_area bg-img" style="background-image: url(/Content/img/bg-img/breadcumb.jpg);">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="page-title text-center">
                    <h2>Tìm kiếm</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ##### Breadcumb Area End ##### -->
<!-- ##### Shop Grid Area Start ##### -->
<section class="shop_grid_area section-padding-80">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-3">
                <div class="shop_sidebar_area">
                    <!-- ##### Single Widget ##### -->
                    <div class="widget catagory mb-50">
                        <!-- Widget Title -->
                       @* <h6 class="widget-title mb-30">Bộ lọc</h6>
                        <!--  Catagories  -->
                        <div class="catagories-menu">
                            <ul id="menu-content2" class="menu-content collapse show">
                                <!-- Single Item -->
                                <li >
                                    <a>Loại hàng</a>
                                    <ul >
                                        <li><input type="radio" name="loai" value="A" id="ao" checked><label for="ao">&emsp;Áo</label></li>
                                        <li><input type="radio" name="loai" value="Q" id="quan" checked><label for="quan">&emsp;Quần</label></li>
                                        <li><input type="radio" name="loai" value="V" id="vay" checked><label for="vay">&emsp;Váy</label></li>
                                        <li><input type="radio" name="loai" value="PK" id="phukien" checked><label for="phukien">&emsp;Phụ kiện</label></li>
                                    </ul>
                                </li>
                                <!-- Single Item -->
                                <li >
                                    <a>Giá</a>
                                    <ul>
                                        <li><input type="radio" name="gia1" value="1" id="gia1" checked><label for="gia1">&emsp;dưới 100.000</label></li>
                                        <li><input type="radio" name="gia2" value="2" id="gia1" checked><label for="gia2">&emsp;100.000 - 300.000</label></li>
                                        <li><input type="radio" name="gia3" value="3" id="gia1" checked><label for="gia3">&emsp;300.000-500.000</label></li>
                                        <li><input type="radio" name="gia4" value="4" id="gia1" checked><label for="gia4">&emsp;500.000 - 1.000.000</label></li>
                                        <li><input type="radio" name="gia5" value="5" id="gia1" checked><label for="gia5">&emsp;trên 1.000.000</label></li>

                                    </ul>
                                </li>
                                
                            </ul>
                        </div>*@
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8 col-lg-9">
                <div class="shop_grid_product_area">
                    <div class="row">
                        <div class="col-12">
                            <div class="product-topbar d-flex align-items-center justify-content-between">
                               
                                <!-- Total Products -->
                                <div class="total-products">
                                     <p><span>@Model.Count</span> sản phẩm</p>
                                </div>
                                <!-- Sorting -->
                                <div class="product-sorting d-flex">
                                    <p>Sort by:</p>
                                    <form action="#" method="get">
                                        <select name="select" id="sortByselect">
                                            <option value="value">Mới nhất</option>
                                            <option value="value">Giá: Cao - Thấp</option>
                                            <option value="value">Giá: Thấp - Cao</option>
                                        </select>
                                        <input type="submit" class="d-none" value="">
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <!-- ##### View Product Start ##### -->
                        @foreach (SANPHAM item in Model)
                        {
                            <!-- Single Product -->
                            <div class="col-12 col-sm-6 col-lg-4">
                                <div class="single-product-wrapper">
                                    <!-- Product Image -->
                                    <div class="product-img">
                                        <img src="/Content/img/product-img/@item.HINHANH" alt="">
                                        <!-- Hover Thumb -->
                                        <!-- Product Badge -->
                                        <div class="product-badge offer-badge">
                                            <span>-30%</span>
                                        </div>
                                        <!-- Favourite -->
                                        <div class="product-favourite">
                                            <a href="#" class="favme fa fa-heart"></a>
                                        </div>
                                    </div>
                                    <!-- Product Description -->
                                    <div class="product-description">
                                        @if (item.SOLUONG > 0)
                                        {
                                            <span>Còn hàng</span>
                                        }
                                        @if (item.SOLUONG <= 0)
                                        {
                                            <span>Hết hàng</span>
                                        }
                                        <a href="/SanPham/ChiTietSP/@item.MASP">
                                            <h6>@item.TENSP</h6>
                                        </a>
                                        <p class="product-price"><span class="old-price">@item.GIA</span> @(item.GIA - item.GIA * item.GIAMGIA / 100)</p>
                                        <!-- Hover Content -->
                                        <div class="hover-content">
                                            <!-- Add to Cart -->
                                            <div class="add-to-cart-btn">
                                                <a href="/Cart/AddItem/@item.MASP " class="btn essence-btn">Thêm vào giỏ hàng</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- ##### View Product End ##### -->

                    </div>
                </div>
                <!-- Pagination -->
                <nav aria-label="navigation">
                    <div style="display :inline-grid; color:darkgray; font-size:50px;">
                       
                    </div>
                    
                </nav>
            </div>
        </div>
    </div>




</section>
<!-- ##### Shop Grid Area End ##### -->
