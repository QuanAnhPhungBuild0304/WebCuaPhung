<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>KucKu-Store</title>
    <meta name="description" content="Sufee Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="apple-touch-icon" href="apple-icon.png">
    <link rel="shortcut icon" href="favicon.ico">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/normalize.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/themify-icons.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="~/Areas/Admin/Content/assets/scss/style.css">

</head>
<body class="bg-dark">

    <div class="sufee-login d-flex align-content-center flex-wrap">
        <div class="container">
            <div class="login-content">
                <div class="login-logo">
                    <a href="index.html">
                        <img class="align-content" src="images/logo.png" alt="">
                    </a>
                </div>
                <div class="login-form">
                    <div style="color: red">
                        <h3> @ViewBag.ThongBao</h3>
                    </div>
                    @using (Html.BeginForm())
                    {
                        <form action="#">
                            <div class="form-group">
                                <label>Tên đăng nhập</label>
                                <input id="txbTenDN" name="username" class="form-control" placeholder="Username">
                            </div>

                            <div class="form-group">
                                <label>Mật khẩu</label>
                                <input type="password" name="pass" id="txbMK" class="form-control" placeholder="Password">
                            </div>

                            <button type="submit" id="btnLogin" class="btn btn-success btn-flat m-b-30 m-t-30">Đăng nhập</button>
                            <div style="margin-top:20px" class="register-link m-t-15 text-right">
                                <a href="/Home/Index"> <h3>Tiếp tục mua sắm</h3></a>
                            </div>
                        </form>
                    }

                </div>

            </div>
        </div>
    </div>

    <script src="~/Areas/Admin/Content/assets/js/vendor/jquery-2.1.4.min.js"></script>
    <script src="~/Areas/Admin/Content/assets/js/popper.min.js"></script>
    <script src="~/Areas/Admin/Content/assets/js/plugins.js"></script>
    <script src="~/Areas/Admin/Content/assets/js/main.js"></script>

</body>
</html>
