@model KucKuStore.Models.Entities.SANPHAM

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
   
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <strong style=" text-align: center; color:blue"><h2>CHỈNH SỬA SẢN PHẨM</h2></strong>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MASP)

    <div class="form-group">
        @Html.LabelFor(model => model.TENSP, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TENSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TENSP, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MADM, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.DropDownList("MADM", null, htmlAttributes: new { @class = "form-control" })
           @Html.HiddenFor(model => model.MADM)

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GIA, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.GIAMGIA, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.GIAMGIA, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GIAMGIA, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.HINHANH, htmlAttributes: new { @class = "control-label col-md-3" })
        
        <div class="col-md-10">
            <td>
                <div class="AnhBia">
                    <img src="@Url.Content("~/Content/img/product-img/" +Model.HINHANH)" width="100px" height="100px" />
                </div>
            </td>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SOLUONG, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.MANCC, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            @Html.DropDownList("MANCC", null, htmlAttributes: new { @class = "form-control" })
            @Html.HiddenFor(model => model.MANCC)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NGAYNHAP, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
           @Html.TextBoxFor(model => model.NGAYNHAP)
            @Html.ValidationMessageFor(model => model.NGAYNHAP, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.CHITIET, htmlAttributes: new { @class = "control-label col-md-3" })
        <div class="col-md-10">
            <textarea>@Model.CHITIET</textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input style="margin-top:20px" id="btnLuu" type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

